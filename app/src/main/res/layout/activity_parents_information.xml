<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.buepl.mobile.application.ParentsInformationActivity">

        <TextView
            android:id="@+id/textView171"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="Father's Name:" />

        <EditText
            android:id="@+id/parents_information_father_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView171"
            android:layout_alignStart="@+id/textView171"
            android:layout_below="@+id/textView171"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parents_information_father_name"
            android:layout_alignStart="@+id/parents_information_father_name"
            android:layout_below="@+id/parents_information_father_name"
            android:layout_marginTop="8dp"
            android:text="Father's contact information:" />

        <EditText
            android:id="@+id/parents_information_father_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView105"
            android:layout_alignStart="@+id/textView105"
            android:layout_below="@+id/textView105"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="number"
            android:text="" />

        <TextView
            android:id="@+id/textView106"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parents_information_father_contact"
            android:layout_alignStart="@+id/parents_information_father_contact"
            android:layout_below="@+id/parents_information_father_contact"
            android:layout_marginTop="8dp"
            android:text="Father's place of work (optional):" />

        <EditText
            android:id="@+id/parents_information_father_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView106"
            android:layout_alignStart="@+id/textView106"
            android:layout_below="@+id/textView106"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView107"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parents_information_father_work"
            android:layout_alignStart="@+id/parents_information_father_work"
            android:layout_below="@+id/parents_information_father_work"
            android:layout_marginTop="8dp"
            android:text="Job title:" />

        <EditText
            android:id="@+id/parents_information_father_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView107"
            android:layout_alignStart="@+id/textView107"
            android:layout_below="@+id/textView107"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView108"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parents_information_father_job_title"
            android:layout_alignStart="@+id/parents_information_father_job_title"
            android:layout_below="@+id/parents_information_father_job_title"
