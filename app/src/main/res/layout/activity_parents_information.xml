            android:layout_alignLeft="@+id/parents_information_mother_contact"
            android:layout_alignStart="@+id/parents_information_mother_contact"
            android:layout_below="@+id/parents_information_mother_contact"
            android:layout_marginTop="8dp"
            android:text="Mother's place of work (optional):" />

        <EditText
            android:id="@+id/parents_information_mother_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView110"
            android:layout_alignStart="@+id/textView110"
            android:layout_below="@+id/textView110"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parents_information_mother_work"
            android:layout_alignStart="@+id/parents_information_mother_work"
            android:layout_below="@+id/parents_information_mother_work"
            android:layout_marginTop="8dp"
            android:text="Job title:" />

        <EditText
            android:id="@+id/parents_information_mother_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView111"
            android:layout_alignStart="@+id/textView111"
            android:layout_below="@+id/textView111"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/parents_information_next_button"
            android:layout_below="@+id/parents_information_mother_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20sp"
            android:background="#6B0F1B"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>