<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="ru.buepl.mobile.application.Certification1Activity">

        <TextView
            android:id="@+id/textView127"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Certification 1:" />

        <TextView
            android:id="@+id/textView128"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView127"
            android:layout_alignStart="@+id/textView127"
            android:layout_below="@+id/textView127"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="I've read and understand admissions rules." />

        <TextView
            android:id="@+id/textView129"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView128"
            android:layout_alignStart="@+id/textView128"
            android:layout_below="@+id/textView128"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="I've read University Articles of\nIncorporation and business registration number." />

        <TextView
            android:id="@+id/textView130"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView129"
            android:layout_alignStart="@+id/textView129"
            android:layout_below="@+id/textView129"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="I've read and understand University Accreditation Certificate
and University Licensing Certificate issued by
the Ministry of education
(33 Shabolovka street, Moscow, Russia, 117997.
tel/fax +7(495)954-4472, +7(495)608-61-58)." />

        <TextView
            android:id="@+id/textView131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView130"
            android:layout_alignStart="@+id/textView130"
            android:layout_below="@+id/textView130"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="First Name:" />

        <EditText
            android:id="@+id/certification_1_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView131"
            android:layout_alignStart="@+id/textView131"
            android:layout_below="@+id/textView131"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView132"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certification_1_first_name"
            android:layout_alignStart="@+id/certification_1_first_name"
            android:layout_below="@+id/certification_1_first_name"
            android:layout_marginTop="8dp"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/certification_1_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView132"
            android:layout_alignStart="@+id/textView132"
            android:layout_below="@+id/textView132"
            android:ems="10"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certification_1_last_name"
            android:layout_alignStart="@+id/certification_1_last_name"
            android:layout_below="@+id/certification_1_last_name"
            android:layout_marginTop="8dp"
            android:text="Date:" />

        <EditText
            android:id="@+id/certification_1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/certification_1_last_name"
            android:layout_alignRight="@+id/certification_1_last_name"
            android:layout_below="@+id/textView133"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="date"
            android:text="" />

        <Button
            android:id="@+id/certification_1_next_button"
            android:layout_below="@+id/certification_1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20sp"
            android:background="#6B0F1B"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</ScrollView>