<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="ru.buepl.mobile.application.Certification6Activity">

        <TextView
            android:id="@+id/textView154"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Certification 6:" />

        <TextView
            android:id="@+id/textView155"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView154"
            android:layout_alignStart="@+id/textView154"
            android:layout_below="@+id/textView154"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="I confirm application to no more than
five(5) universities and to no more than
three(3) academic programs at the university." />

        <TextView
            android:id="@+id/textView156"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView155"
            android:layout_alignStart="@+id/textView155"
            android:layout_below="@+id/textView155"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="First Name:" />

        <EditText
            android:id="@+id/certifi_6_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView156"
            android:layout_alignStart="@+id/textView156"
            android:layout_below="@+id/textView156"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView157"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_6_first_name"
            android:layout_alignStart="@+id/certifi_6_first_name"
            android:layout_below="@+id/certifi_6_first_name"
            android:layout_marginTop="8dp"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/certifi_6_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView157"
            android:layout_alignStart="@+id/textView157"
            android:layout_below="@+id/textView157"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView158"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_6_last_name"
            android:layout_alignStart="@+id/certifi_6_last_name"
            android:layout_below="@+id/certifi_6_last_name"
            android:layout_marginTop="8dp"
            android:text="Date:" />

        <EditText
            android:id="@+id/certifi_6_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView158"
            android:layout_alignStart="@+id/textView158"
            android:layout_below="@+id/textView158"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="date"
            android:text="" />

        <Button
            android:id="@+id/certification_6_next_button"
            android:layout_below="@+id/certifi_6_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20sp"
            android:background="#6B0F1B"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>