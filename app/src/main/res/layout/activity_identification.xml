<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.buepl.mobile.application.IdentificationActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Identification"
        android:textColor="#750825"
        android:textSize="9pt" />

    <EditText
        android:id="@+id/identification_date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:gravity="center"

        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/identification_date_of_birth"
        android:layout_centerHorizontal="true"
        android:text="Date of Birth" />

    <EditText
        android:id="@+id/identification_place_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center"

        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/identification_date_of_birth"
        android:layout_alignStart="@+id/identification_date_of_birth" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/identification_place_of_birth"
        android:layout_centerHorizontal="true"
        android:text="Place of Birth" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:id="@+id/identification_radio_group_gender">

        <RadioButton
            android:id="@+id/radio_gender_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/identification_place_of_birth"
            android:layout_alignStart="@+id/identification_place_of_birth"
            android:layout_below="@+id/textView17"
            android:layout_marginTop="37dp"
            android:text="Female" />

        <RadioButton
            android:id="@+id/radio_gender_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radio_gender_female"
            android:layout_toEndOf="@+id/radio_gender_female"
            android:layout_toRightOf="@+id/radio_gender_female"
            android:text="Male" />
    </RadioGroup>

    <EditText
        android:id="@+id/identification_citizenship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/identification_place_of_birth"
        android:layout_alignStart="@+id/identification_place_of_birth"
        android:layout_below="@+id/identification_radio_group_gender"
        android:gravity="center"

        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/identification_citizenship"
        android:layout_centerHorizontal="true"
        android:text="Citizenship" />

    <Button
        android:id="@+id/identification_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="#6B0F1B"
        android:textColor="@android:color/white"
        android:text="Next: Program Selection"
        android:padding="5dp"
         />


</RelativeLayout>
