<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.buepl.mobile.application.Certification4Activity">

        <TextView
            android:id="@+id/textView144"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Certification 4:" />

        <TextView
            android:id="@+id/textView145"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView144"
            android:layout_alignStart="@+id/textView144"
            android:layout_below="@+id/textView144"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="Original documents must be submitted by
August 21, 2017 for day and evening program
and 10 days before the start of the
semester for the correspondence program." />

        <TextView
            android:id="@+id/textView146"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView145"
            android:layout_alignStart="@+id/textView145"
            android:layout_below="@+id/textView145"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="First Name:" />

        <EditText
            android:id="@+id/certifi_4_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView146"
            android:layout_alignStart="@+id/textView146"
            android:layout_below="@+id/textView146"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView147"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_4_first_name"
            android:layout_alignStart="@+id/certifi_4_first_name"
            android:layout_below="@+id/certifi_4_first_name"
            android:layout_marginTop="8dp"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/certifi_4_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView147"
            android:layout_alignStart="@+id/textView147"
            android:layout_below="@+id/textView147"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView148"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_4_last_name"
            android:layout_alignStart="@+id/certifi_4_last_name"
            android:layout_below="@+id/certifi_4_last_name"
            android:layout_marginTop="8dp"
            android:text="Date:" />

        <EditText
            android:id="@+id/certifi_4_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView148"
            android:layout_alignStart="@+id/textView148"
            android:layout_below="@+id/textView148"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="date"
            android:text="" />

        <Button
            android:id="@+id/certification_4_next_button"
            android:layout_below="@+id/certifi_4_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20sp"
            android:background="#6B0F1B"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>