<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.buepl.mobile.application.TranscriptActivity">

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:text="Transcript from another university/college"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView41"
        android:layout_marginLeft="100dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/transcript_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView41"
            android:layout_alignStart="@+id/textView41"
            android:layout_below="@+id/textView41"
            android:layout_marginTop="22dp"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/transcript_button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/transcript_button_yes"
            android:layout_alignStart="@+id/transcript_button_yes"
            android:layout_below="@+id/transcript_button_yes"
            android:layout_marginTop="18dp"
            android:text="No" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Document No:"
        android:layout_below="@+id/radioGroup"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup" />

    <EditText
        android:id="@+id/transcript_doc_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView42"
        android:layout_alignStart="@+id/textView42"
        android:layout_below="@+id/textView42"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:text="" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transcript_doc_no"
        android:layout_alignStart="@+id/transcript_doc_no"
        android:layout_below="@+id/transcript_doc_no"
        android:layout_marginTop="15dp"
        android:text="Issue by:" />

    <EditText
        android:id="@+id/transcript_issue_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/textView43"
        android:layout_alignLeft="@+id/textView43"
        android:layout_alignStart="@+id/textView43" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transcript_issue_by"
        android:layout_alignStart="@+id/transcript_issue_by"
        android:layout_below="@+id/transcript_issue_by"
        android:layout_marginTop="15dp"
        android:text="Issue date:" />

    <EditText
        android:id="@+id/transcript_issue_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView44"
        android:layout_alignStart="@+id/textView44"
        android:layout_below="@+id/textView44"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:text="" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National scholatic completetition(s):"
        android:layout_below="@+id/transcript_issue_date"
        android:layout_alignLeft="@+id/textView41"
        android:layout_alignStart="@+id/textView41"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transcript_issue_date"
        android:layout_alignStart="@+id/transcript_issue_date"
        android:layout_below="@+id/textView46"
        android:layout_marginTop="20dp"
        android:text="Completion title:" />

    <EditText
        android:id="@+id/transcript_dip_completion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView47"
        android:layout_alignStart="@+id/textView47"
        android:layout_below="@+id/textView47"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transcript_dip_completion_title"
        android:layout_alignStart="@+id/transcript_dip_completion_title"
        android:layout_below="@+id/transcript_dip_completion_title"
        android:layout_marginTop="15dp"
        android:text="Diploma No:" />

    <EditText
        android:id="@+id/transcript_diploma_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView48"
        android:layout_alignStart="@+id/textView48"
        android:layout_below="@+id/textView48"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:text="" />

    <Button
        android:id="@+id/transcript_next_button"
        android:layout_below="@+id/transcript_diploma_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#6B0F1B"
        android:textColor="@android:color/white"/>

</RelativeLayout>
    </ScrollView>
