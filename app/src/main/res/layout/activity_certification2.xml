<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.buepl.mobile.application.Certification2Activity">

        <TextView
            android:id="@+id/textView134"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Certification 2:" />

        <TextView
            android:id="@+id/textView135"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView134"
            android:layout_alignStart="@+id/textView134"
            android:layout_below="@+id/textView134"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="I am receiving higher education\nfor the first time:" />

        <RadioGroup
            android:id="@+id/certifi_2_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView135"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp">

            <RadioButton
                android:id="@+id/certifi_2_radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>

            <RadioButton
                android:id="@+id/certifi_2_radio_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="No"/>

        </RadioGroup>

        <TextView
            android:id="@+id/textView136"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_2_radio_group"
            android:layout_alignStart="@+id/certifi_2_radio_group"
            android:layout_below="@+id/certifi_2_radio_group"
            android:layout_marginTop="25dp"
            android:text="First Name:" />

        <EditText
            android:id="@+id/certifi_2_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView136"
            android:layout_alignStart="@+id/textView136"
            android:layout_below="@+id/textView136"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView137"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_2_first_name"
            android:layout_alignStart="@+id/certifi_2_first_name"
            android:layout_below="@+id/certifi_2_first_name"
            android:layout_marginTop="8dp"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/certifi_2_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView137"
            android:layout_alignStart="@+id/textView137"
            android:layout_below="@+id/textView137"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView138"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/certifi_2_last_name"
            android:layout_alignStart="@+id/certifi_2_last_name"
            android:layout_below="@+id/certifi_2_last_name"
            android:layout_marginTop="8dp"
            android:text="Date:" />

        <EditText
            android:id="@+id/certifi_2_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView138"
            android:layout_alignStart="@+id/textView138"
            android:layout_below="@+id/textView138"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="date"
            android:text="" />

        <Button
            android:id="@+id/certification_2_next_button"
            android:layout_below="@+id/certifi_2_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20sp"
            android:background="#6B0F1B"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>