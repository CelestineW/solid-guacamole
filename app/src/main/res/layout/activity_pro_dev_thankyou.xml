<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.buepl.mobile.application.ProDevThankyouActivity">


    <TextView
        android:gravity="center"
        android:id="@+id/textView39"
        android:textColor="#750825"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_marginTop="118dp"
        android:text="THANK YOU FOR YOUR APPLICATION!"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:textSize="40sp"
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Someone from\n the Admissions Office\n will contact you shortly"
        android:layout_below="@+id/textView39"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="@android:color/white"
        android:background="#750825"
        android:textSize="35sp"
        android:id="@+id/pro_dev_main_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="Main Menu"
        android:layout_below="@+id/textView40"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>