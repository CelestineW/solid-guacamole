<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.buepl.mobile.application.ReturnAddressActivity">

        <TextView
            android:id="@+id/textView120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Please return originals\nto the following address:" />

        <TextView
            android:id="@+id/textView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView120"
            android:layout_alignStart="@+id/textView120"
            android:layout_below="@+id/textView120"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="15dp"
            android:text="Full name:" />

        <EditText
            android:id="@+id/return_address_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView122"
            android:layout_alignStart="@+id/textView122"
            android:layout_below="@+id/textView122"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/return_address_full_name"
            android:layout_alignStart="@+id/return_address_full_name"
            android:layout_below="@+id/return_address_full_name"
            android:layout_marginTop="8dp"
            android:text="Street address:" />

        <EditText
            android:id="@+id/return_address_street_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView123"
            android:layout_alignStart="@+id/textView123"
            android:layout_below="@+id/textView123"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView124"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/return_address_street_address"
            android:layout_alignStart="@+id/return_address_street_address"
            android:layout_below="@+id/return_address_street_address"
            android:layout_marginTop="8dp"
            android:text="Apt. No:" />

        <EditText
            android:id="@+id/return_address_apt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView124"
            android:layout_alignStart="@+id/textView124"
            android:layout_below="@+id/textView124"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/return_address_apt_no"
            android:layout_alignStart="@+id/return_address_apt_no"
            android:layout_below="@+id/return_address_apt_no"
            android:layout_marginTop="8dp"
            android:text="Zip code:" />

        <EditText
            android:id="@+id/return_address_zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView125"
            android:layout_alignStart="@+id/textView125"
            android:layout_below="@+id/textView125"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="number"
            android:text="" />

        <TextView
            android:id="@+id/textView126"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/return_address_zip_code"
            android:layout_alignStart="@+id/return_address_zip_code"
            android:layout_below="@+id/return_address_zip_code"
            android:layout_marginTop="8dp"
            android:text="Phone No: (+00)000-000-00-00" />

        <EditText
            android:id="@+id/return_address_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView126"
            android:layout_alignStart="@+id/textView126"
            android:layout_below="@+id/textView126"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="number"
            android:text="" />

        <Button
            android:id="@+id/return_address_next_button"
            android:layout_below="@+id/return_address_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20sp"
            android:background="#6B0F1B"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</ScrollView>
