<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="ru.buepl.mobile.application.MainMenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="WELCOME!" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/b_academicProgs"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="#750825"
                android:text="Academic Programs"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/b_app"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="#750825"
                android:text="Application"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/b_mainWeb"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="#750825"
                android:text="Main Website"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/b_gallery"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="#750825"
                android:text="Gallery"
                android:layout_margin="5dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
